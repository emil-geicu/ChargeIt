@model ChargeMachineViewModel
<h1 class="display-4 mb-4">Edit station</h1>

<form asp-controller="ChargeMachines" asp-action="EditExistingStation" method="post">
    <input type="text" class="form-control" asp-for="Id" hidden>
   <div class="form-group add-margin-form">
    <label asp-for="Code" class="form-label"></label>
    <input type="text" class="form-control form-input" asp-for="Code"  disabled>
  </div>
  <div class="form-group add-margin-form">
    <label asp-for="City" class="form-label">City</label>
    <input type="text" class="form-control form-input" asp-for="City"  placeholder="City">
    <span asp-validation-for="City" class="text-danger"></span>
  </div>
  <div class="form-group add-margin-form">
    <label asp-for="Street" class="form-label">Street</label>
    <input type="text" class="form-control form-input" asp-for="Street" placeholder="Street">
    <span asp-validation-for="Street" class="text-danger"></span>
  </div> 
  <div class="form-group add-margin-form">
    <label asp-for="Number" class="form-label">Number</label>
    <input type="number" class="form-control form-input" asp-for="Number" placeholder="Number">
    <span asp-validation-for="Number" class="text-danger"></span>
  </div>
  <div class="form-group add-margin-form">
    <label asp-for="Latitude" class="form-label">Latitude</label>
    <input type="number" step="0.000001" class="form-control form-input" asp-for="Latitude" placeholder="Latitude">
    <span asp-validation-for="Latitude" class="text-danger"></span>
  </div>
  <div class="form-group add-margin-form">
    <label asp-for="Longitude" class="form-label">Longitude</label>
    <input type="number" step="0.000001" class="form-control form-input" asp-for="Longitude" placeholder="Longitude">
    <span asp-validation-for="Longitude" class="text-danger"></span>
  </div>

  
   <div class="d-flex justify-content-center align-items-center">
      <button type="submit" class="btn btn-success me-2">Add Station</button>
           
      <a type="button" class="btn btn-danger" asp-controller="ChargeMachines" asp-action="Index">Cancel</a>
   </div>
  
  
</form>