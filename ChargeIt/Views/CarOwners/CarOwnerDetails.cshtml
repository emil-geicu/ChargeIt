@model OwnerWithCarsViewModel
<link rel="stylesheet" href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />

<h1 class="display-4 mb-4">Details for the owner with the email: @Model.CarOwner.Email </h1>

<div class="card bg-dark text-light div-center-margins" style="width: 18rem;">
  <img class="card-img-top" src="https://smartenergy.illinois.edu/wp-content/uploads/2022/03/EV-charging-2.png" alt="Station">
  <div class="card-body">
      <h6 class="card-title">Name: @Model.CarOwner.Name</h6> 

    <div>
    <label asp-for="CarOwner.Email"> Email:</label>
    <span>@Model.CarOwner.Email</span>
    </div>
  </div>
</div>


@if(Model.Cars.Count()!=0)
{
 <h3 style="margin-bottom:10px; margin-top:20px">Bookings for this car</h3>
 <table id="car-owner-details-table" class="table table-dark table-bordered table-hover zui-table zui-table-rounded">
  <thead>
    <tr>
    
      <th scope="col">Plate Number</th>
    </tr>
  </thead>
  <tbody>

      @foreach(var car in Model.Cars)
        {
            <tr>
            <td>@car.PlateNumber</td>
            </tr>
        }

  </tbody>
</table>
}
<script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js">
</script>


<script>
$(document).ready(function() {
    
    $('#car-owner-details-table').DataTable();
} );
</script>