@model CarOwnersViewModel
<h1 class="display-4 mb-4">Edit car owner</h1>

<form asp-controller="CarOwners" asp-action="EditExistingCar" method="post">
    <input type="text" class="form-control" asp-for="Id" hidden>

   <div class="form-group add-margin-form">
    <label asp-for="Name" class="form-label"></label>
    <input type="text" class="form-control form-input" asp-for="Name">
  </div>

   <div class="form-group add-margin-form">
    <label asp-for="Email" class="form-label"></label>
    <input type="text" class="form-control form-input" asp-for="Email">
  </div>

   <div class="form-group add-margin-form">
    <label asp-for="Cars" class="form-label"></label>
    <input type="text" class="form-control form-input" asp-for="Cars">
  </div>
  
  
  
   <div class="d-flex justify-content-center align-items-center">
      <button type="submit" class="btn btn-success me-2">Edit Car Owner</button>
           
      <a type="button" class="btn btn-danger" asp-controller="CarOwners" asp-action="Index">Cancel</a>
   </div>
  
  
</form>